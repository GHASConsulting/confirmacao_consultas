#DATABASE_TYPE=firebase

# Oracle Database (usado quando DATABASE_TYPE=oracle)
ORACLE_URL=oracle+cx_oracle://username:password@host:port/service_name

# PostgreSQL Database (usado quando DATABASE_TYPE=postgresql)
